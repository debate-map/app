{
  "name": "@debate-map/app",
  "description": "Monorepo for the client, server, etc. of the Debate Map website (debatemap.app).",
  "version": "0.0.1",
  "author": "Venryx (https://venryx.com)",
  "private": true,
  "main": "./Packages/deploy/Pulumi/index.ts",
  "workspaces": [
    "Packages/client",
    "Packages/common",
    "Packages/web-server",
    "Packages/app-server",
    "Packages/deploy"
  ],
  "scripts": {
    "start": "nps",
    "preinstall": "npx only-allow yarn",
    "postinstall_old": "patch-package --patch-dir ./node_modules/web-vcore/patches && patch-package --patch-dir ./patches",
    "postinstall_old2": "patch-package --patch-dir ./patches",
    "postinstall_old3": "node ./node_modules/web-vcore/Scripts_Dist/ApplyPatches.js && patch-package --patch-dir ./patches",
    "postinstall": "patch-package --patch-dir ./patches && cd ./node_modules/web-vcore && node ./Scripts_Dist/ApplyPatches.js",
    "postinstall_test": "echo 'Test101'; exit(1)"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "file-syncer": "^0.0.8",
    "nps": "^5.10.0",
    "ts-loader": "9.2.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "1.1.6",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.2"
  },
  "@resolutions_c": "The 'version locks' below (other than mathjs toggle) are for version-sensitive deps (eg. those with patches specified) where ci-builds would/may otherwise get the 'wrong' versions (ie. differing from dev/symlink-enabled environment).",
  "resolutions": {
    "mathjs": "1.0.0",
    "@types/react": "17.0.9",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tslib": "2.3.0",
    "zen-observable-ts": "1.1.0",
    "graphql-tag": "2.12.5"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "sync-directory": "^2.2.22",
    "web-vcore": "0.0.39"
  },
  "packageManager": "yarn@3.0.0-rc.2"
}
