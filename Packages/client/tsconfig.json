		//"noEmit": false,
		"outDir": "Source_JS",

		// compilation
		"esModuleInterop": true,
		//"strict": true, // enables all of the below (other than noImplicitReturns)
		//"noImplicitAny": true,
		//"noImplicitThis": true,
		//"noImplicitReturns": true,
		"alwaysStrict": true,
		//"strictBindCallApply": true,
