{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug App Server",
			"type": "lldb",
			"request": "launch",
			"cargo": {
				"args": [
					"build",
					"--package=app_server",
					"--bin=app_server"
				],
				// added this section, since it's part of the launch.json template generated by rust-analyzer/codelldb (not sure which)
				"filter": {
					"name": "app_server",
					"kind": "bin"
				}
			},
			"envFile": "${workspaceFolder}/Packages/app-server/.env.local",
			"env": {
				"DEBUGGER": "LLDB"
			},
			"args": [],
			"cwd": "${workspaceFolder}",
		}
	]
}