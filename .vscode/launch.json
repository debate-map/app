{
	"version": "0.2.0",
	"configurations": [
		{
            "name": "Debug App Server",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
					"-p",
					"app-server",
                ],
            },
			"envFile": "${workspaceFolder}/Packages/app-server/.env.local",
	
			"args": [],
            "cwd": "${workspaceFolder}",
        },
		{
			"name": "server.run (debug)",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"--nolazy",
				"--loader",
				"ts-node/esm.mjs",
				"--experimental-specifier-resolution=node"
			],
			"args": [
				"Source\\Main.ts"
			],
			"cwd": "${workspaceFolder}\\Packages\\server",
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			]
		},
		{
			"name": "server.run (debug) with Kubernetes [not yet working]",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"--nolazy",
				"--loader",
				"ts-node/esm.mjs",
				"--experimental-specifier-resolution=node"
			],
			"args": [
				"Source\\Main.ts"
			],
			"cwd": "${workspaceFolder}\\Packages\\server",
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			],
			"preLaunchTask": "bridge-to-kubernetes.resource",
			"env": {
				"GRPC_DNS_RESOLVER": "native"
			}
		},
	]
 }